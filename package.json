{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@storybook/addon-a11y": "6.4.9",
    "@storybook/addon-actions": "6.4.9",
    "@storybook/addon-docs": "6.4.9",
    "@storybook/addon-links": "6.4.9",
    "@storybook/addons": "6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/eslint-config-storybook": "^3.1.2",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/preset-create-react-app": "^4.0.1",
    "@storybook/react": "6.4.9",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/history": "^4.7.9",
    "@types/prop-types": "^15.7.4",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "axios": "^0.24.0",
    "bootstrap": "^5.1.3",
    "eslint": "^8.0.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.3.5",
    "eslint-webpack-plugin": "^2.5.2",
    "history": "^5.1.0",
    "jest": "27.4.5",
    "jest-cli": "^27.4.7",
    "jest-resolve": "27.4.5",
    "lint-staged": "^12.3.4",
    "lodash": "^4.17.21",
    "node-sass": "^7.0.1",
    "prettier": "^2.5.1",
    "prop-types": "^15.7.2",
    "react-scripts": "5.0.0",
    "redux": "^4.1.2",
    "redux-saga": "^1.1.3",
    "typescript": "^4.5.2",
    "validate-branch-name": "^1.2.1",
    "webpack": "^5.69.1"
  },
  "dependencies": {
    "formik": "^2.2.9",
    "husky": "^7.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-moment-proptypes": "^1.8.1",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 9009 --no-manager-cache",
    "prepare": "husky install"
  },
  "jest": {
    "moduleNameMapper": {
      "^(components|config|constants|actions|reducers|styles|api|hooks|utils|store|storage|schemas|tests)$": "<rootDir>/src/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "validate-branch-name && npm test",
      "post-merge": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet package-lock.json && npm ci"
    }
  },
  "lint-staged": {
    "*.(ts|tsx|graphql|css)": [
      "prettier --write  --ignore-path .eslintignore"
    ],
    "*!(.d).(ts|tsx)": [
      "eslint --fix"
    ]
  },
  "validate-branch-name": {
    "pattern": "^master$|stable$|^v\\d+.\\d+$|^release/v\\d+.\\d+$|^(fix|chore|poc|feature|style)[_][\\w-]+$|^IM-[0-9]+[\\w-]+$",
    "errorMsg": "Branch name format accepted: IM-XXX_some_keyworks, vXX.XX or (fix|chore|poc)_some_keyworks"
  }
}
