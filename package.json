{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@storybook/addon-a11y": "6.5.0-alpha.61",
    "@storybook/addon-actions": "6.5.0-alpha.61",
    "@storybook/addon-docs": "6.5.0-alpha.61",
    "@storybook/addon-links": "6.5.0-alpha.61",
    "@storybook/addons": "6.5.0-alpha.61",
    "@storybook/builder-webpack5": "^6.5.0-alpha.61",
    "@storybook/eslint-config-storybook": "^3.1.2",
    "@storybook/manager-webpack5": "^6.5.0-alpha.61",
    "@storybook/react": "6.5.0-alpha.61",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@testing-library/user-event": "^14.1.1",
    "@types/history": "^4.7.11",
    "@types/prop-types": "^15.7.5",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/react-redux": "^7.1.24",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "axios": "^0.26.1",
    "bootstrap": "^5.1.3",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-storybook": "^0.5.10",
    "eslint-webpack-plugin": "^3.1.1",
    "history": "^5.3.0",
    "jest": "27.5.1",
    "jest-cli": "^27.5.1",
    "jest-resolve": "27.5.1",
    "lint-staged": "^12.3.8",
    "lodash": "^4.17.21",
    "node-sass": "^7.0.1",
    "prettier": "^2.6.2",
    "react-scripts": "5.0.1",
    "redux": "^4.2.0",
    "redux-saga": "^1.1.3",
    "typescript": "^4.6.3",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.72.0"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "formik": "^2.2.9",
    "husky": "^7.0.4",
    "prop-types": "^15.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-moment-proptypes": "^1.8.1",
    "react-redux": "^8.0.0",
    "react-router-dom": "^6.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-storybook": "build-storybook",
    "storybook": "start-storybook -p 9009 --no-manager-cache",
    "prepare": "husky install"
  },
  "jest": {
    "moduleNameMapper": {
      "^(components|config|constants|actions|reducers|styles|api|hooks|utils|store|storage|schemas|tests)$": "<rootDir>/src/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "validate-branch-name && npm test",
      "post-merge": "git diff-tree -r --name-only --no-commit-id ORIG_HEAD HEAD | grep --quiet package-lock.json && npm ci"
    }
  },
  "lint-staged": {
    "*.(ts|tsx|graphql|css)": [
      "prettier --write  --ignore-path .eslintignore"
    ],
    "*!(.d).(ts|tsx)": [
      "eslint --fix"
    ]
  },
  "validate-branch-name": {
    "pattern": "^master$|stable$|^v\\d+.\\d+$|^release/v\\d+.\\d+$|^(fix|chore|poc|feature|style)[_][\\w-]+$|^IM-[0-9]+[\\w-]+$",
    "errorMsg": "Branch name format accepted: IM-XXX_some_keyworks, vXX.XX or (fix|chore|poc)_some_keyworks"
  }
}
